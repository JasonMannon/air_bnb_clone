<h1>Contact Us</h1>
<% if current_owner %>
  <%= form_for @comment do |f| %>
    <%= f.label "you suck!" %><br />
    <%= f.text_area :comment, :rows => 6 %><br />
    <%= f.hidden_field :owner_id, value: current_owner.id %>
    <%= f.submit "send my complain" %>
      <% end %>
    <% else %>
    <h2>Please log in to make a comment </h2>
<% end %>
